{% extends '::admin/layout_admin.html.twig' %}
{% block title %}Menüpontok{%endblock%}
{% block body -%}
    <table class="tablesorter">
        <thead>
            <tr>
                <th>Azonosító</th>
                <th>Menü címe</th>
                <th>Menü kulcsszavak</th>
                <th>Műveletek</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_menu_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.seoKeywords }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_menu_show', { 'id': entity.id }) }}">Adatlap</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_menu_edit', { 'id': entity.id }) }}">Szerkeztés</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_menu_new') }}">
                Új létrehozása
            </a>
        </li>
    </ul>
    {% endblock %}
