{% extends '::admin/layout_admin.html.twig' %}
{% block title %}Termékek{%endblock%}
{% block body -%}
    <table class="tablesorter">
        <thead>
            <tr>
                <th>Az.</th>
                <th>Név</th>
                <th>Ára</th>
                <th>Anyag</th>
                <th>Méret</th>
                <th>Kép</th>
                <th>Kategória</th>
                <th>Művelet</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
                
            <tr>
                <td><a href="{{ path('admin_product_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.prize }}</td>
                <td>{{ entity.anyag }}</td>
                <td>{{ entity.size }}</td>
                <td><img src="/uploads/product/thb_{{ entity.image }}" style="width: 100px"></td>
                <td>{{ entity.category }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_product_show', { 'id': entity.id }) }}">Adatlap</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_product_edit', { 'id': entity.id }) }}">Szerkeztés</a>
                    </li>
                </ul>
                </td>
            </tr>
      
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_product_new') }}">
                Új termék felvétele
            </a>
        </li>
    </ul>
    {% endblock %}
